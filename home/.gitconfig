[user]
    name = Florian Mauracher
    email = flo@mauracher.eu
[alias]
    a     = add
    au    = add -u
    b     = branch
    ba    = branch -a
    br    = branch --sort=-committerdate
    c     = commit
    ca    = commit --amend
    cane  = commit --amend --no-edit
    cf    = commit --fixup
    cs    = commit --squash
    cm    = commit --message
    co    = checkout
    cob   = checkout -b
    cod   = checkout develop
    com   = checkout main
    cp    = cherry-pick
    d     = diff
    dc    = diff --cached
    dh    = diff HEAD
    di    = difftool
    dic   = difftool --cached
    dih   = difftool HEAD
    dw    = diff --word-diff
    f     = fetch
    fp    = fetch --prune
    g     = !exec git
    git   = !exec git
    gr    = grep
    lgr   = log --grep
    # Log
    l     = ll -10
    ll    = log --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lg    = ll --graph -10
    lgl   = ll --graph
    lm    = ll --first-parent -10
    lml   = ll --first-parent
    lpx   = log --pretty=format:'%s'
    # Push
    p     = push
    pf    = push --force-with-lease
    puo   = push -u origin
    pl    = pull
    plr   = pull --rebase
    # Rebase
    rb    = rebase
    rba   = rebase --abort
    rbc   = rebase --continue
    rbi   = rebase -i
    rbiod = rebase -i origin/develop
    rbiom = rebase -i origin/main
    rbod  = rebase origin/develop
    rbom  = rebase origin/master
    # Reset
    rs    = reset
    rshod = reset --hard origin/develop
    rshom = reset --hard origin/master
    rsom  = reset origin/master
    s     = status
    sm    = submodule
    smu   = submodule update --init --recursive
    st    = stash
    sti   = stash --keep-index
    stp   = stash pop
    # Utils
    alias = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /' | sort
    cleanup = !git branch --merged | egrep -v '(^\\*|master|main|develop|dev)' | xargs git branch -d
    devs  =  shortlog -sne
    lcf  = diff-tree --no-commit-id --name-only -r
    lcfh = diff-tree --no-commit-id --name-only -r HEAD
    pullall  = "!f(){ git pull \"$@\" && git submodule update --init --recursive; }; f"
    webstart = instaweb --httpd=webrick --start
    webstop  = instaweb --httpd=webrick --stop
[init]
    defaultBranch = main
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = auto
[core]
    pager = less -RFX
    excludesfile = ~/.gitignore
[diff]
    tool = vimdiff
    compactionHeuristic = true
[difftool]
    prompt = false
[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
[interactive]
    #diffFilter = diff-highlight
[merge]
    conflictstyle = diff3
    tool = vimdiff
    renamelimit = 50000
[mergetool]
    keepBackup = false
[push]
    # Change to simple when only using git 2.0
    default = current
[pull]
    ff = only
[rebase]
    autosquash = true
[rerere]
    enabled = false
[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
