#!/usr/bin/env bash
set -eu

usage() {
	echo -e "Usage: $0 [-pibldh]" 1>&2
	echo -e "\t-p Print clone command" 1>&2
	echo -e "\t-i Insall config" 1>&2
	echo -e "\t-b Install base packages" 1>&2
	echo -e "\t-l Backup logs" 1>&2
	exit 1
}

while getopts ":pibldh" opt; do
    case $opt in
        p)
			PRINT=true;
			;;
        i)
			INST=true;
			;;
        b)
			BASE=true;
			;;
        l)
			LOG=true;
			;;
        d)
			DEBUG=true; set -x
			;;
        *)
			usage
			;;
	esac
done
shift $(($OPTIND - 1))

conf_dir="$HOME/.myconf"
conf_bin="$conf_dir/bin"
conf_hist="$conf_dir/history"
conf_tools="$conf_dir/tools"
backup_host="veldt"

if [ ${PRINT:-} ]; then
	cat ${conf_dir}/data/instdb/myconf
fi
if [ ${INST:-} ]; then
	echo "Installing myconf"
	${conf_tools}/config-install.sh
fi
if [ ${BASE:-} ]; then
	echo "Installing base software"
	sudo ${conf_dir}/data/instdb/apt-base
fi
if [ ${LOG:-} ]; then
	echo "Pushing history to backup srv"
	date=$(date +%F-%H-%M-%S)
	host=$(hostname)
	for file in ${conf_hist}/*; do
		base=$(basename "${file}")
		scp "$file" veldt:"~/backup/history/${base}.new"
		ssh veldt "cd ~/backup/history && cat ${base}* | sort -u > ${base}.up && mv ${base}.up ${base} && rm ${base}.new && git add ${base}"
	done
	ssh veldt "cd ~/backup/history && git commit -m \"${host} - ${date}\""
fi
